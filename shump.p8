function _init()
	cls(0)
	mode="start"
	blinkt=1	--blink time
	t=0
	
	--star_red={x=40,y=60,col=8}	--objects
end


function _update()
	t+=1
	blinkt+=1

	if mode=="game" then
		update_game()
	elseif mode=="start" then
		--start screen--
		update_start()
	elseif mode=="over" then
		update_over()
	end
end


function _draw()
	if mode=="game" then
		draw_game()
	elseif mode=="start" then
		--start screen--
		draw_start()
	elseif mode=="over" then
		draw_over()
	end
end


function startgame()
	mode="game"
	t=0
	
	ship={}
	ship.x=64
	ship.y=64
	ship.spdx=0
	ship.spdy=0
	ship.spr=2	--‚¨ÖÔ∏è‚û°Ô∏è sprite shift

	flamespr=5	--backward flame
	
	bultimer=0
	
	muzzle=0	--shooting flame
	
	score=0
	
	lives=4
	
	invul=0	--invunerability
	
	--star stuff--
	--[[
	starx={}
	stary={}
	starspd={}
	for i=1,100 do
		add(starx,flr(rnd(128)))
		add(stary,flr(rnd(128)))
		add(starspd,rnd(1.5)+.5)
	end
	]]
	
	stars={}	--star obj
	for i=1,100 do
		local newstar={}
		newstar.x=flr(rnd(128))
		newstar.y=flr(rnd(128))
		newstar.spd=rnd(1.5)+.5
		add(stars,newstar)
	end
	
	buls={}	--bullet obj
	
	enemies={}	--enemy obj
	
	explodes={}
	
	parts={}	--explosion particles
	
	spawnen()
end

