function draw_game()
	cls(0)
	starfield()
	
	if invul<=0 then
		drwmyspr(ship)
		spr(shipspr,shipx,shipy)	--ship
	 --spr(flamespr,ship.x,ship.y+8)	--backward flame
	elseif sin(t/5)<.1 then
	--invul state--	
		drwmyspr(ship)
		spr(flamespr,ship.x,ship.y+8)
	end
	
	
	--drawing enemies--
	for myen in all(enemies) do
		if myen.flash>0 then
			myen.flash-=1
			for i=1,15 do
				pal(i,7)
			end
		end
		drwmyspr(myen)	--enemies
		pal()
	end
	
	--drawing bullet--
	for mybul in all(buls) do
		drwmyspr(mybul)	--bullet
	end
	
	if muzzle>0 then
		circfill(ship.x+3,ship.y-2,muzzle,7)
	end
	
	--drawing explosion--
	--spr version--
	--[[
	local exframes={64,64,66,68,70,70,72}
	for myex in all(explodes) do
	
		local myspr=myex.age
		myspr=flr(myspr)
		myspr=exframes[myspr]
		
		spr(myspr,myex.x-4,myex.y-4,2,2)
		myex.age+=1
		if myex.age>#exframes then
			del(explodes,myex)
		end
	end
	]]
	
	--drawing particles explosion--
	--particle version--
	for myp in all(parts) do
		local pc=7
		if myp.age>5 then
			pc=10
		end
		if myp.age>7 then
			pc=9
		end
		if myp.age>10 then
			pc=8
		end
		if myp.age>12 then
			pc=2
		end
		if myp.age>15 then
			pc=5
		end
		
		circfill(myp.x,myp.y,myp.size,pc)
		myp.x+=myp.sx
		myp.y+=myp.sy
		myp.sx*=.85
		myp.sy*=.85
		myp.age+=1
		
		if myp.age>myp.maxage then
			myp.size-=.5
			if myp.size<0 then
				del(parts,myp)
			end
		end
	end
	
	print("score:"..score,40,1,12)
	
	for i=1,4 do
		if lives>=i then
			spr(13,i*9-8,1)
		else 
			spr(14,i*9-8,1)
		end
	end
	
	--print(#buls,5,5,7)
end


